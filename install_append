for l in %{buildroot}/usr/lib64/libncursesw.so; do
    soname=$(basename $(readlink $l))
    rm -f $l
    echo "INPUT($soname -ltinfow)" > $l
done
for l in %{buildroot}/usr/lib64/libncurses.so; do
    soname=$(basename $(readlink $l))
    rm -f $l
    echo "INPUT($soname -ltinfo)" > $l
done

rm -f %{buildroot}/usr/lib64/libcursesw.so
rm -f %{buildroot}/usr/lib64/libcurses.so
echo "INPUT(-lncurses)" > %{buildroot}/usr/lib64/libcurses.so
echo "INPUT(-lncursesw)" > %{buildroot}/usr/lib64/libcursesw.so
